@using AhmedovTravel.Core.Models.Room
@model IEnumerable<RoomViewModel>

@{
    ViewBag.Title = "Chosen Room";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var room in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@room.ImageUrl" alt="Room Image">

            <div class="card-body">
                <h5 class="card-title mt-1"> Persons: @room.Persons</h5>
                <p class="mb-0">Price per night: @room.PricePerNight.ToString("n") BGN</p>
                <p class="mb-0">RoomType: @room.RoomType</p>
            </div>

            <form class="input-group-sm" asp-route-roomId="@room.Id" asp-controller="Room" asp-action="RemoveFromCollection" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
            </form>
            <form class="input-group-sm" asp-route-roomServiceId="" asp-controller="RoomService" asp-action="All" method="get">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Choose RoomService" />
            </form>
        </div>
    }
</div>