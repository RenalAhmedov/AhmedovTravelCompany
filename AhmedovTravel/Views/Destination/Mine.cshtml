@model IEnumerable<MineDestinationsViewModel>

@{
    ViewBag.Title = "Chosen Destination";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var destination in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@destination.ImageUrl" alt="Destination Image">

            <div class="card-body">
                <h5 class="card-title mt-1">@destination.Title</h5>
                <p class="mb-0">TownName: @destination.Town</p>
                <p class="mb-0">Rating: @destination.Rating</p>
            </div>

            <form class="input-group-sm" asp-route-destinationId="@destination.Id" asp-controller="Destination" asp-action="RemoveFromCollection" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
            </form>
            <form class="input-group-sm" asp-route-transportId="" asp-controller="Transport" asp-action="All" method="get">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Choose Transport" />
            </form>
        </div>
    }
</div>