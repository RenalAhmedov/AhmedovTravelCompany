@using AhmedovTravel.Core.Models.Hotel
@model IEnumerable<HotelViewModel>

@{
    ViewBag.Title = "Chosen Hotel";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var hotel in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <img class="card-img-top" style="width: 18rem;"
             src="@hotel.ImageUrl" alt="Hotel Image">

            <div class="card-body">
                <h5 class="card-title mt-1">@hotel.Name</h5>
                <p class="mb-0">HotelDescription: @hotel.Description</p>
                <p class="mb-0">HotelRating: @hotel.HotelRating</p>
            </div>

            <form class="input-group-sm" asp-route-hotelId="@hotel.Id" asp-controller="Hotel" asp-action="RemoveFromCollection" method="post">
                <input class="fs-6 btn btn-success mb-3 p-2" type="submit" value="Remove" />
            </form>
        </div>
    }
</div>